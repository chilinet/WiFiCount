// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(cuid())
  name            String?
  email           String?   @unique
  emailVerified   DateTime?
  image           String?
  password        String?
  role            String?
  resetToken      String?   @unique
  resetTokenExpiry DateTime?
  nodeId          String?
  node            TreeNode? @relation(fields: [nodeId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Device {
  id          String   @id @default(cuid())
  macAddress  String
  name        String
  areaId      String
  area        TreeNode @relation(fields: [areaId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([areaId])
}

model CaptivePortalConfig {
  id              String   @id @default(cuid())
  nodeId          String?
  node            TreeNode? @relation(fields: [nodeId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  portalName      String   @map("name")
  welcomeMessage  String   @default("")
  termsOfService  String   @default("")
  redirectUrl     String?
  sessionTimeout  Int      @default(3600)
  maxBandwidth    Int      @default(1024)
  isActive        Boolean  @default(true)
  logoUrl         String?  @default("")
  welcomeHeading  String?  @default("")
  welcomeText     String?  @default("")
  hintText        String?  @default("")
  backgroundColor String?  @default("#000000")
  backgroundImage String?  @default("") @db.Text
  portalBackgroundColor String?  @default("#111111")
  buttonColor     String?  @default("#ff9800")
  buttonText      String?  @default("Internet")
  termsLinkText   String?  @default("")
  headingColor    String?  @default("#ffffff")
  welcomeTextColor String?  @default("#ffffff")
  hintTextColor   String?  @default("#ffffff")
  buttonTextColor String?  @default("#000000")
  description     String?  // Keep existing field
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([nodeId])
  @@map("CaptivePortal")
}

model TreeNode {
  id        String    @id @default(cuid())
  name      String
  parentId  String?
  parent    TreeNode? @relation("TreeHierarchy", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  children  TreeNode[] @relation("TreeHierarchy")
  category  String
  users     User[]
  devices   Device[]
  captivePortalConfigs CaptivePortalConfig[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([parentId])
}
