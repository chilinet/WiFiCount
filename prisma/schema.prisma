generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
    SUPERADMIN
    ADMIN
    USER
}

enum NodeCategory {
    ROOT
    KUNDE
    STANDORT
    BEREICH
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role      @default(USER)
  nodeId        String?
  node          TreeNode? @relation(fields: [nodeId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Device {
  id          String   @id @default(cuid())
  macAddress  String
  name        String
  areaId      String
  area        TreeNode @relation(fields: [areaId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([areaId])
}

model TreeNode {
  id        String    @id @default(cuid())
  name      String
  parentId  String?
  parent    TreeNode? @relation("TreeHierarchy", fields: [parentId], references: [id])
  children  TreeNode[] @relation("TreeHierarchy")
  category  String
  users     User[]
  devices   Device[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([parentId])
}
